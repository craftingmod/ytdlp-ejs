{
  "compilerOptions": {
    // https://aka.ms/tsconfig/module
    "module": "NodeNext",
    "target": "esnext",
    "lib": [
      "ESNext"
    ],
    "types": [
      "node"
    ],
    // Style Options
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    // Recommended Options
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  }
}